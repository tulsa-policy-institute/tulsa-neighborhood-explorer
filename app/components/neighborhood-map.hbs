<MapboxGl @initOptions={{hash hash=true}} class='map-container' as |map|>
  <map.source
    @options={{hash type='geojson' data=@neighborhoods promoteId='id'}} as |source|
  >
    <source.layer
      @layer={{hash
        type='fill'
        paint=(hash
          fill-color='DodgerBlue'
          fill-opacity=0.2
        )
      }} as |layer|
    >
      <Map::FeaturePointer
        @map={{map}}
        @layerId={{layer.id}}
      />
      <map.on
        @event='click'
        @layerId={{layer.id}}
        @action={{this.transitionTo}}
      />
    </source.layer>
    <source.layer
      @layer={{hash
        type='line'
        paint=(hash
          line-width=1
          line-color='#ae561f'
        )
      }}
    />
    <source.layer
      @layer={{hash
        type='symbol'
        paint=(hash
          text-color='rgba(66, 66, 66, 1)'
          text-halo-width=2
          text-halo-color='white'
          text-opacity=0.75
        )
        layout=(hash
          text-field='{neighborhood}'
          text-allow-overlap=false
          symbol-placement='point'
        )
      }}
    />
  </map.source>
</MapboxGl>
