<Map::MapboxOn
  @map={{@map}}
  @event='mousemove'
  @layerId={{@layerId}}
  @action={{this.onLayerHover}} as |mousemove|
>
  <Map::MapboxOn
    @map={{@map}}
    @event='mouseleave'
    @layerId={{@layerId}}
    @action={{this.onLayerMouseOut}}
  />

  {{#if this.hoveredFeature}}
    {{yield this.hoveredFeature}}
  {{/if}}
</Map::MapboxOn>
