{{page-title "Tulsa Neighborhood Explorer"}}

<div class="flex flex-col box-border h-full w-full max-h-screen">
  <Header class="z-10" />
  <div class="flex flex-col sm:flex-row h-full overflow-scroll">
    <div class="basis-1/4 relative">
      <NeighborhoodMap
        @neighborhoods={{this.model.neighborhoodsGeoJson}}
      />
      <div class="absolute top-1 w-full md:top-10 md:p-1">
        <SearchBar
          class="m-2"
          @list={{this.model.neighborhoods}}
        />
      </div>
    </div>
    <div class="basis-3/4 border-l-8 max-h-full overflow-scroll">
      {{outlet}}
    </div>
  </div>
</div>
